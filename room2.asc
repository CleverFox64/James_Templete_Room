// room script file

function room_FirstLoad()
{
  RemoveWalkableArea(2);
}

function hEnablesWalk_WalkOn(Hotspot *theHotspot)
{
  RestoreWalkableArea(2);
  hotspot[1].Enabled = false;
  
}


function hNoGoOnStairs_WalkOn(Hotspot *theHotspot)
{
  cEgo.Say("I can't go up there.");
  cEgo.Walk(120, 345, eBlock, eWalkableAreas);
}



function oBalloon_Interact(Object *theObject, CursorMode mode)
{
  WalkToObjectAndJumpUp(theObject, 75, iBalloon);
}
